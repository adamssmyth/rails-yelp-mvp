<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>

<h2>Reviews</h2>
<% @restaurant.reviews.each do |review| %>
  <p><strong>Rating:</strong> <%= review.rating %> ‚≠ê</p>
  <p><%= review.content %></p>
<% end %>

<h2>Add a Review</h2>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, collection: 0..5, as: :select %>
  <%= f.input :content %>
  <%= f.submit "Submit Review", class: "btn btn-success" %>
<% end %>

<%= link_to "Back to Main Menu", restaurants_path, class: "btn btn-primary mt-3" %>
