<h1>New Restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.submit "Create Restaurant", class: "btn btn-success" %>
<% end %>

<%= link_to "Back to List", restaurants_path, class: "btn btn-secondary" %>
